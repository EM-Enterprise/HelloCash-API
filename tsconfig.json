{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "paths": {
        "@/*": ["./*"],
        "@/config/*": ["./config/*"],
        "@/api/*": ["./api/*"],
        "@/typings/*": ["./typings/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "tests.ts",
    "custom-api"
  ]
}